doctype html
html
head
	title= title

	block css
		// css
		link(rel="stylesheet", href="/build/vendors/_bower.css")
		link(rel="stylesheet", href="/components/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet", href="/components/components-font-awesome/css/font-awesome.min.css")
		link(rel="stylesheet", href="/css/theme-overrides/angular-material/toolbar.css")
		link(rel="stylesheet", href="/css/theme-overrides/angular-material/button.css")
		link(rel="stylesheet", href="/css/theme-overrides/md-table.css")
		link(rel="stylesheet", href="/css/template.css")
		link(rel="stylesheet", href="/css/horizontalNav.css")
		link(rel="stylesheet", href="/css/user.css")
		link(rel="stylesheet", href="/css/datasetExplorer.css")
		link(rel="stylesheet", href="/css/about.css")
		link(rel="stylesheet", href="/css/directDownload.css")
		link(rel="stylesheet", href="/css/contacts.css")
		link(rel="stylesheet", href="/css/timeline.css")

		body(ng-app="openDataHubApp")
			div#site-url(data-site_url="#{config.web.site_url}:#{config.web.port}")

			// include template/header.jade
			section(layout="column" flex)
				oph-header(flex)
				oph-sub-header

			md-content(layout="row")
				div(class="main-container" flex)
					block main_container

			include template/footer.jade

			// General jquery UI dialogs
			div#errors-container-js

			div#success-messages-js

			div#data-consult-form-dialog-js

			div#slider(style="display: none")

// javascript
block js
	script(src="/build/min/vendors.min.js")
	// script(src="/components/mdDataTable/dist/md-data-table.js")
	// script(src="/components/mdDataTable/dist/md-data-table-templates.js")
	// script(src="/build/min/scripts.min.js")
	script(src="js/app.js")
	script(src="build/common-bundle.js")
