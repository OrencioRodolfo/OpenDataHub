div.panel-heading Recover account password
div.panel-body
	form#recover-pwd-form-js
		input(name="email", type="text", placeholder="Email", class="form-control inline-right", id="email-recover-js")
		div(class="btns-container col-xs-12")
			button(type="button" class="btn btn-default btn-xs btn-recover-password-js")
				span(class="glyphicon glyphicon-ok") Recover
			button(type="button" class="btn btn-default btn-xs btn-cancel-js")
				span(class="glyphicon glyphicon-remove") Cancel