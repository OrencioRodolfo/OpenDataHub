doctype html
html
head
	title= title
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	block css
		// css
		link(rel="stylesheet", href="/build/vendors/_bower.css")
		link(rel="stylesheet", href="/components/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet", href="/components/components-font-awesome/css/font-awesome.min.css")
		link(rel="stylesheet", href="/components/jquery-ui/themes/base/all.css")
		link(rel="stylesheet", href="/css/screen.css")

		body(ng-app="openDataHubApp")
			div#site-url(data-site_url="#{config.web.site_url}:#{config.web.port}")

			// div(layout="row")
			// 	div(hide show-xs flex) XS
			// 	div(hide show-sm flex) SM
			// 	div(hide show-md flex) MD
			// 	div(hide show-lg flex) LG
			// 	div(hide show-xl flex) XL

			// include template/header.jade
			section(layout="column" flex)
				oph-header(flex)
				oph-sub-header

			md-content(layout="row" flex)
				div(class="main-container" flex)
					block main_wrapper
						// Main side nav that will show on small devices
						block side_nav
							oph-main-side-nav

						// Main container for dynamic contents
						block main_container

			include template/footer.jade

			// General jquery UI dialogs
			div#errors-container-js

			div#success-messages-js

			div#data-consult-form-dialog-js

			div#slider(style="display: none")

// javascript
block js
	script(src="/build/min/vendors.min.js")
	script(src="/js/app.js")
	script(src="/build/common-bundle.js")

	if ENV_DEVELOPMENT
		script(src="#{config.web.site_url}:35729/livereload.js")
