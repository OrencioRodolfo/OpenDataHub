if (utilities.empty(more_results))
	table(class="table table-striped list-records list-records-js" data-page="1")
		thead
			tr
				for field in fields
					th #{field}
		tbody
			for row in records
				tr
					for field in fields
						block flag
							- var flag = false;
						each value, key in row
							if key == field
								block flag_
									- flag = true;
								td #{value}
						if flag == false
							td
else
	for row in records
		tr
			for field in fields
				block flag
					- var flag = false;
				each value, key in row
					if key == field
						block flag_
							- flag = true;
						td #{value}
				if flag == false
					td

script.
	$(function(){
		$('.operation-opts-js .separator-js').show();
		$('.operation-opts-js .download-csv-js').show();
		$('.operation-opts-js .download-js').show();

		$(window).scroll(function() {
			if($(window).scrollTop() == $(document).height() - $(window).height()) {
				moreResults();
			}
		});
	});